<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss} %-5level %logger{0} {%class %method} - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="info">
        <appender-ref ref="stdout"/>
    </root>

    <logger name="io.github.pzmi" level="info"/>


</configuration>